<Window x:Class="WaterSortGame.Views.LevelCompleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaterSortGame.Views"
        mc:Ignorable="d"
        Title="Level Complete!"
        Height="250"
        Width="600"
        
        >
    <Window.InputBindings>
        <KeyBinding Key="Esc" Command="{Binding CloseWindowCommand}"/>
    </Window.InputBindings><!--Tohle pravdepodobne budu chtit pozdejc odstranit-->
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="7 0 7 0" />
            <Setter Property="Width" Value="150" />
        </Style>
    </Window.Resources>
    <Grid>
        <TextBlock Text="Congratulation! You finished a level!"/>
        <StackPanel Orientation="Horizontal" Height="25" HorizontalAlignment="Center">
            <Button Content="Next level" Command="{Binding ForceNewLevelCommand}"/>
            <Button Content="Restart current level" Command="{Binding ForceRestartCommand}"/>
            <Button Content="Return" Command="{Binding CloseWindowCommand}"/>
        </StackPanel>
    </Grid>
</Window>
