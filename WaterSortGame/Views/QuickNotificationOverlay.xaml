<UserControl x:Class="WaterSortGame.Views.QuickNotificationOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WaterSortGame.Views"
             mc:Ignorable="d"
             d:DesignHeight="250" d:DesignWidth="600">
    <Grid Style="{StaticResource QuickNotificationPopupScreenOuter}">
        <Button Style="{StaticResource ClickBackgroundButton}" Command="{Binding CancelScreenCommand}">
            <Border Style="{StaticResource PopupScreen}">
                <StackPanel>
                    <TextBlock Text="{Binding Path=NotificationText, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"/>
                </StackPanel>
            </Border>
        </Button>
    </Grid>
</UserControl>
