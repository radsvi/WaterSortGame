<UserControl x:Class="WaterSortGame.Views.LoadLevelScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WaterSortGame.Views"
             mc:Ignorable="d" 
             d:DesignHeight="620" d:DesignWidth="600">
    <Grid Style="{StaticResource PopupScreenOuter}">
        <Border Style="{StaticResource PopupScreen}" Width="580" Height="280">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="1">
                    <TextBlock Text="Load level:" Grid.Row="1" FontSize="20" HorizontalAlignment="Center"/>

                    <DataGrid Margin="0,10,0,0"
                    ItemsSource="{Binding Items}" d:ItemsSource="{d:SampleData ItemCount=2}"
                    SelectedItem="{Binding SelectedItem}"
                    CanUserAddRows="False" CanUserDeleteRows="False"
                    IsReadOnly="True"
                    AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding VideoDisplayName}" />
                            <DataGridTemplateColumn Header="Item Collection">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ListBox ItemsSource="{Binding SubtitlesDisplayName}" d:ItemsSource="{d:SampleData ItemCount=3}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Orientation="Horizontal" Height="25" HorizontalAlignment="Center" Margin="0,10,0,0"
                            Style="{StaticResource NavigationButtonsPrimary}">
                        <Button Content="OK" Command="{Binding }" Width="150"/>
                        <Button Content="Cancel" Command="{Binding PopupWindow}" Width="150"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
