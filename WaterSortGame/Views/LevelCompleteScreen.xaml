<UserControl x:Class="WaterSortGame.Views.LevelCompleteScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WaterSortGame.Views"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="600">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="7 0 7 0" />
            <Setter Property="Width" Value="150" />
        </Style>
    </UserControl.Resources>
    <Grid Background="White">
        <TextBlock Text="Congratulation! You finished a level!"/>
        <StackPanel Orientation="Horizontal" Height="25" HorizontalAlignment="Center">
            <Button Content="Next level" Command="{Binding ForceNewLevelCommand}"/>
            <Button Content="Restart current level" Command="{Binding ForceRestartCommand}"/>
            <Button Content="Return" Command="{Binding UpdateViewCommand}" CommandParameter="Home"/>
        </StackPanel>
    </Grid>
</UserControl>
