<UserControl x:Class="WaterSortGame.Views.GameSavedScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WaterSortGame.Views"
             xmlns:models="clr-namespace:WaterSortGame.Models"
             mc:Ignorable="d" 
             d:DesignHeight="220" d:DesignWidth="600">
    <Grid Style="{StaticResource PopupScreenOuter}">
        <Button Style="{StaticResource ClickBackgroundButton}" Command="{Binding CancelScreenCommand}">
            <Border Width="250" Height="90">
                <TextBlock Text="Game saved..." Grid.Row="1" FontSize="20"/>
            </Border>
        </Button>
    </Grid>
</UserControl>
