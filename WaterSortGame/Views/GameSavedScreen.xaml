<UserControl x:Class="WaterSortGame.Views.GameSavedScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WaterSortGame.Views"
             xmlns:models="clr-namespace:WaterSortGame.Models"
             mc:Ignorable="d" 
             d:DesignHeight="220" d:DesignWidth="600">
    <Grid Style="{StaticResource PopupScreenOuter}">
        <Border Style="{StaticResource PopupScreen}" Width="250" Height="90">
            <Button Style="{StaticResource CloseNotificationButton}" Command="{Binding CloseNotification_Command}">
                <TextBlock Text="Game saved..." Grid.Row="1" FontSize="20" HorizontalAlignment="Center" Height="auto"/>
            </Button>
        </Border>
    </Grid>
</UserControl>
