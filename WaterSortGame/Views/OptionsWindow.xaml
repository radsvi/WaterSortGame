<Window x:Class="WaterSortGame.Views.OptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaterSortGame.Views"
        xmlns:models="clr-namespace:WaterSortGame.Models"
        xmlns:userControls="clr-namespace:WaterSortGame.Views.UserControls"
        xmlns:converters="clr-namespace:WaterSortGame.Converters"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type={x:Type local:OptionsWindow}}"
        Title="OptionsWindow"
        WindowStartupLocation="CenterScreen"
        Height="{Binding OptionsWindowHeight, Mode=TwoWay}"
        Width="{Binding OptionsWindowWidth, Mode=TwoWay}"
        >
    <Window.Resources>
        <models:TubesManager x:Key="TubesList"/>
        <converters:BoolNegateConverter x:Key="StatusToEnabled"/>
    </Window.Resources>
    <Window.InputBindings>
        <KeyBinding Key="Esc" Command="{Binding CloseOptionsWindowCommand}"/>
    </Window.InputBindings>
    <Grid Margin="10">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <GroupBox Header="Tubes" DataContext="{Binding Source={StaticResource TubesList}}">
                    <StackPanel>
                        <DockPanel>
                            <Label Content="Limit extra tubes to maximum of"/>
                            <TextBox
                                 Text="{Binding MaximumExtraTubes, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                 VerticalAlignment="Center" HorizontalAlignment="Stretch" Width="Auto" Height="24" VerticalContentAlignment="Center" />
                        </DockPanel>
                        <DockPanel>
                            <CheckBox x:Name="RandomColors" IsChecked="{Binding RandomNumberOfTubes, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                                <Label Content="Random number of colors"/>
                            </CheckBox>
                        </DockPanel>
                        <DockPanel IsEnabled="{Binding ElementName=RandomColors,Path=IsChecked,Converter={StaticResource StatusToEnabled}}"
                                   ToolTip="This number coresponds to the latest number of colors generated.">
                            <Label Content="Number of colors to generate"/>
                            <TextBox
                                 Text="{Binding NumberOfColorsToGenerate, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                 VerticalAlignment="Center" HorizontalAlignment="Stretch" Width="Auto" Height="24" VerticalContentAlignment="Center" />
                        </DockPanel>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="Dev options - not implemented yet">
                    <StackPanel>
                        <DockPanel>
                            <CheckBox x:Name="DevOptionsEnabled" IsChecked="False">
                                <Label Content="Enable dev options"/>
                            </CheckBox>
                        </DockPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
