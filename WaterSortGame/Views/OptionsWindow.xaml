<Window x:Class="WaterSortGame.Views.OptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaterSortGame.Views"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type={x:Type local:OptionsWindow}}"
        Title="OptionsWindow"
        WindowStartupLocation="CenterScreen"
        Height="{Binding WindowHeight, Mode=TwoWay}" Width="{Binding WindowWidth, Mode=TwoWay}"
        >
    <Window.InputBindings>
        <KeyBinding Key="Esc" Command="{Binding CloseOptionsWindowCommand}"/>
    </Window.InputBindings>
    <Grid Margin="10">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <GroupBox Header="Tubes">
                    <DockPanel>
                        <Label Content="Maximum extra tubes"/>
                        <TextBox x:Name="MaximumExtraTubes" d:Text="100"
                                 Text="{Binding SubtitlesDownloadSource, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                 VerticalAlignment="Center" HorizontalAlignment="Stretch" Width="Auto" Height="24" VerticalContentAlignment="Center" />
                    </DockPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
